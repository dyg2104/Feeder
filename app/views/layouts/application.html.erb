<!DOCTYPE html>
<html>
<head>
  <title>Feeder</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <div class = "nav-hidden">
      <div class="nav-hidden-top">
  		<% if current_user.nil? %>
        <%= render "shared/logged_out" %>
      <% end %>
      </div>

      <% if current_user %>
      <div class="nav-hidden-bottom">
      <%= button_to "Logout", session_url, method: :delete %>
      </div>
      <% end %>
    </div>
  </nav>

  <div class="page">
    <%= yield %>
  </div>

</body>
</html>
